@model Bakery.Models.Treat

<h2>Edit Treat Info</h2>

<p><strong>Treat: </strong>@Model.Name</p>
<p><strong>Description: </strong>@Model.Description</p>
<p>Flavors:</p>
@foreach (var join in Model.Flavors)
{
    <p><strong>@if(!String.IsNullOrEmpty(@join.Flavor.Name))
    {
        @join.Flavor.Name
    }</strong>
    @if(!String.IsNullOrEmpty(@join.Flavor.Description))
    {
        @join.Flavor.Description
    }</p>
}

@using (Html.BeginForm())
{
    @Html.Label("Name", "Treat Name: ")
    @Html.EditorFor(model => model.Name, new { @class="form-control", required="required" })
    <br>
    @Html.Label("Description", "Treat Description: ")
    @Html.EditorFor(model => model.Description, new { @class="form-control" })
    @*@Html.HiddenFor(model => model.FlavorId)*@
    <input type="submit" value="Update Treat" class="btn btn-outline-danger">
}